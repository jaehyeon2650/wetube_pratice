extends base
block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(type="text",placeholder="Video Title",required,maxlength="80",name="title")
        input(type="text",placeholder="Description",required,minlength="20",name="description")
        input(type="text",placeholder="Hastags, seperated by comma",name="hashtags")
        input(type="submit",value="Save")